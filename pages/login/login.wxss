.userInput {
  width: 80%;
  height: 100rpx;
  border: 2rpx solid #ddd;
  border-radius: 100rpx;
  padding-left: 60rpx;
  font-size: 42rpx;
  color: #808080;
}

.loginBtn {
  width: 80%;
  height: 100rpx;
  /* background-color: #2d8cf0; */
  color: #fff;
  font-size: 44rpx;
  font-weight: 400;
  border-radius: 100rpx;
  background: linear-gradient(#74b3ff, #2d8cf0);
  background-position: center;
  background-size: cover;
}

.loginText {
  font-size: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loginText text:nth-child(1) {
  color: #2d8cf0;
  
}
.loginText text:nth-child(3) {
  color: #2d8cf0;

}
