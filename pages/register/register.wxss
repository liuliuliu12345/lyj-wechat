/* pages/register/register.wxss */

.imgBox {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.loverImg {
  border-radius: 50%;
}

.userPwdInput {
  width: 80%;
  height: 100rpx;
  border: 2rpx solid #ddd;
  border-radius: 100rpx;
  padding-left: 60rpx;
  font-size: 34rpx;
  color: #808080;
}

.phoneCheckCode {
  width: 87%;
  height: 100rpx;
  border: 2rpx solid #ddd;
  border-radius: 100rpx;
}
.phoneCheckCode view:nth-child(1) {
  flex: 4;
}
.phoneCheckCode view:nth-child(2) {
  flex: 2;
  color: #000;
  font-size: 34rpx;
}
.phoneCode {
  width: 100%;
  height: 100rpx;
  padding-left: 60rpx;
  font-size: 34rpx;
  color: #808080;

}

